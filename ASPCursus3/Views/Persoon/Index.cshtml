@model List<ASPCursus3.Models.Persoon>
@{ 
    ViewBag.Title = "Personen";
}
<h2>Personen</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Voornaam</th>
            <th>Familienaam</th>
            <th>Score</th>
            <th>Wedde</th>
            <th>Paswoord</th>
            <th>Geboren</th>
            <th>Gehuwd</th>
            <th>Opmerkingen</th>
            <th>Geslacht</th>
            <th>Adres</th>
            <th>Verwijderen</th>
            <th>Wijzigen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persoon in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => persoon.ID)</td>
                <td>@Html.DisplayFor(m => persoon.Voornaam)</td>
                <td>@Html.DisplayFor(m => persoon.Familienaam)</td>
                <td>@Html.DisplayFor(m => persoon.Score)</td>
                <td>@Html.DisplayFor(m => persoon.Wedde)</td>
                <td>@Html.DisplayFor(m => persoon.Paswoord)</td>
                <td>@Html.DisplayFor(m => persoon.Geboren)</td>
                <td>@Html.DisplayFor(m => persoon.Gehuwd)</td>
                <td>@Html.DisplayFor(m => persoon.Opmerkingen)</td>
                <td>@Html.DisplayFor(m => persoon.Geslacht)</td>
                <td>@Html.DisplayFor(m => persoon.Adres)</td>
                <td><a href="@Url.Action("VerwijderForm","Persoon",new { ID = persoon.ID })"><img src="~/Images/delete.png" alt="delete" /></a></td>
                <td><a href="@Url.Action("EditForm","Persoon",new {ID=persoon.ID})"><img src="~/Images/edit.png" alt="edit" /></a></td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Opslag","Opslag","Persoon",null,new { @class= "btn btn-primary"})
@Html.ActionLink("Persoon toevoegen","Toevoegen","Persoon",null,new { @class= "btn btn-primary"})